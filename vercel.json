{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/internal.html",
      "destination": "/public/internal.html"
    },
    {
      "source": "/sox-auditor.html",
      "destination": "/public/sox-auditor.html"
    },
    {
      "source": "/big4-reviewer.html",
      "destination": "/public/big4-reviewer.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}